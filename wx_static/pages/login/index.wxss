/* 个人信息 */

.intro {
  height: 236rpx;
  margin: 100rpx 30rpx 0rpx 30rpx;
  background-color: rgba(70, 101, 134, 0.521);
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0px 20rpx 0px 20rpx;
}

.desc {
  color: #fff;
  font-size: 30rpx;
}

.logo {
  width: 108rpx;
  height: 108rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(255, 255, 255, 0.9);
  margin-right: 30rpx;
}

.btn.button-hover {
background-color:rgba(102, 153, 255, 1);
}
.btn {
margin-top: 100rpx;
background-color:rgba(102, 153, 255, 1);
border-radius:10rpx;
width:90%;
color: #fff;

}

.content {
  margin: 20rpx 30rpx 0rpx 30rpx;
  color: white;
}

.content-title {
  text-align: center;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  background-color: rgba(255, 255, 255, 0.2);
  position: relative;
}

.content-text {
  padding: 20rpx;
  font-size: 28rpx;
  border-bottom-left-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
  background-color: rgba(255, 255, 255, 0.1);
  line-height: 2;
}

.title-icon {
  position: absolute;
  right: 20rpx;
  top: 24rpx;
  height: 40rpx;
  width: 40rpx;
  background-size: cover;
  background-image: url("data:image/png;base64,");
}